@model WarsztatMVC.Models.Reservation  
@{
    ViewData["Title"] = "Nowa Rezerwacja";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<h1>Umów wizytę</h1>

<h4>Formularz Rezerwacji</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ServiceId" class="control-label">Wybierz Usługę</label>
                <select asp-for="ServiceId" class ="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Date" class="control-label">Data i Godzina</label>
                <input asp-for="Date" type="text" id="datepicker" class="form-control" placeholder="Wybierz termin..." />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Rezerwuj termin" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/pl.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
}