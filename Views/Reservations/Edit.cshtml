@model WarsztatMVC.Models.Reservation

@{
    ViewData["Title"] = "Edycja Rezerwacji";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<h1>Edycja Rezerwacji</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />

            <div class="form-group mb-3">
                <label class="control-label fw-bold">Klient</label>
                <input type="text" class="form-control" value="@Model.User?.UserName" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Date" class="control-label">Data wizyty</label>
                <input asp-for="Date" type="text" id="datepicker" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            @if (User.IsInRole("Admin"))
            {
                <div class="form-group mb-3">
                    <label asp-for="Status" class="control-label fw-bold text-danger">Zmień Status</label>
                    <select asp-for="Status" class="form-control" asp-items="ViewBag.StatusList"></select>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="Status" />
            }

            <div class="form-group mb-3">
                <label asp-for="ServiceId" class="control-label">Usługa</label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/pl.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
}