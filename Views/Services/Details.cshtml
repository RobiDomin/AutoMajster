@model WarsztatMVC.Models.Service

@{
    ViewData["Title"] = "Szczegóły Usługi";
}

<h1>Szczegóły usługi</h1>

<div>
    <h4>Informacje o usłudze</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nazwa Usługi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            Opis
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            Cena
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price) PLN
        </dd>
    </dl>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót</a>
</div>