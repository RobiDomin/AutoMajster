@model WarsztatMVC.Models.Service

@{
    ViewData["Title"] = "Dodaj Usługę";
}

<h1>Dodaj nową usługę</h1>

<h4>Formularz Usługi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Nazwa Usługi</label>
                <input asp-for="Name" class="form-control" placeholder="Wpisz nazwę usługi" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label">Opis</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Krótki opis..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label">Cena (PLN)</label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Dodaj usługę" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}