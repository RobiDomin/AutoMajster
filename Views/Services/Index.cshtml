@model IEnumerable<WarsztatMVC.Models.Service>

@{
    ViewData["Title"] = "Cennik Usług";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>Cennik Usług</h1>
        <p class="text-muted">Wybierz usługę i umów się na wizytę online.</p>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
            <i class="bi bi-plus-lg"></i>Dodaj Usługę
        </a>
    }
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover table-striped align-middle mb-0">
            <thead class="table-dark text-uppercase small">
                <tr>
                    <th style="width: 25%;">Nazwa Usługi</th>
                    <th style="width: 45%;">Opis</th>
                    <th style="width: 15%;">Cena</th>
                    <th style="width: 15%;" class="text-end">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold text-primary">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td class="text-muted small">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>

                        <td>
                            <span class="badge bg-light text-dark border fs-6">
                                @item.Price.ToString("C")
                            </span>
                        </td>

                        <td class="text-end">
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edytuj</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Szczegóły</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Usuń</a>
                                </div>
                            }
                            else
                            {
                                <a asp-controller="Reservations" asp-action="Create" class="btn btn-sm btn-success fw-bold">
                                    Umów wizytę
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center mt-5 p-4">
        <h4>Brak usług w ofercie</h4>
        <p>Aktualnie nie dodano żadnych usług do bazy danych.</p>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-dark">Dodaj pierwszą usługę</a>
        }
    </div>
}